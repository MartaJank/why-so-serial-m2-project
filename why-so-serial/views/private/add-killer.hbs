<div class="form-wrapper">
    <div class="form-bg">
        <div class="form-container">
            <div class="form-title">
                <h2>Add Killer</h2>
                {{#if errorMessage}}
                <p class="error-message">
                    {{ errorMessage }}
                </p>
                {{/if}}
            </div>
            <form class="form" action="/private/add-killer" method="post">
                <div class="form-group">
                    <input class="form-input" type="text" name="name" id="name-input" placeholder="Name">
                    <label class="form-label" for="name-input">Killer's Name</label>
                </div>
                <div class="form-group">
                    <input class="form-input" type="text" name="lastName" id="lastname-input" placeholder="Last Name">
                    <label class="form-label" for="lastname-input">Killer's Last Name</label>
                </div>
                <div class="form-group">
                    <input class="form-input" type="text" name="aka" id="aka-input" placeholder="AKA">
                    <label class="form-label" for="aka-input">Killer's AKA</label>
                </div>
                <div class="form-group">
                    <input class="form-input" type="text" name="gender" id="gender-input" placeholder="Gender">
                    <label class="form-label" for="gender-input">Killer's Gender</label>
                </div>
                <div class="form-group">
                    <input class="form-input" type="text" name="murderType" id="murderType-input"
                        placeholder="Murder Type">
                    <label class="form-label" for="murderType-input">Murder Type</label>
                </div>
                <div class="form-group">
                    <input class="form-input" type="text" name="author" id="author-input" placeholder="Your Name">
                    <label class="form-label" for="author-input">Your Name</label>
                </div>
                <div class="form-group">
                    <button class="btn">Add</button>
                </div>

            </form>

        </div>
    </div>
</div>